<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">todo.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="task_name" />
                <field name="assign_to" />
                <field name="description" />
                <field name="due_date" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">todo.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class = 'title'>
                        <label for= 'task_name'/>
                        <h1>
                            <field name="task_name"/>
                        </h1>
                        </div>
                    </group>
                    <group>
                        <field name="assign_to"/>
                        <field name="description" />
                        <field name="due_date" />
                        <field name="status" />
                    </group>
                </sheet>
                <div class='oe_chatter'>
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">todo.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

        
                <filter name="status" string="Status" domain="[('status', '=', 'True')]" context="{'group_by': 'status'}" />
                <filter name="group_assign_to" string="Assign To" context="{'group_by': 'assign_to'}" />
                <filter name="group_due_date" string="Due Date" context="{'group_by': 'due_date'}" />
            </search>
        </field>
    </record>

    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">todo_action</field>
        <field name="res_model">todo.task</field>
    </record>

    <menuitem
        id="all_task_menu_item"
        name="All Tasks"
        parent="all_task_menu"
        action="todo_task_action"/>

</odoo>
