<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="users_view_tree" model="ir.ui.view">
        <field name="name">users_tree</field>
        <field name="model">users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="users_view_form" model="ir.ui.view">
        <field name="name">users_form</field>
        <field name="model">users</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class = 'title'>
                        <label for= 'name'/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    
    <record id="users_action" model="ir.actions.act_window">
        <field name="name">users_action</field>
        <field name="res_model">users</field>
    </record>
    <menuitem
        id="users_menu_item"
        name="Users"
        parent= "users_menu"
        action= "users_action"
    />

</odoo>
